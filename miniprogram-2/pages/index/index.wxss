/* index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF3E0 0%, #FFFFFF 100%);
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.title {
  font-size: 64rpx;
  font-weight: bold;
  color: #FF6F00;
  display: block;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.action-area {
  padding: 40rpx 0;
}

.camera-btn {
  width: 100%;
  height: 180rpx;
  background: linear-gradient(135deg, #FF9800 0%, #FF5722 100%);
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 152, 0, 0.3);
  border: none;
}

.camera-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.camera-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.camera-btn::after {
  border: none;
}

.history-section {
  margin-top: 60rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-count {
  font-size: 28rpx;
  color: #999;
}

.story-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.story-item {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.story-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  flex-shrink: 0;
}

.story-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
}

.story-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.story-date {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  background: #fff;
  border-radius: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.empty-hint {
  font-size: 28rpx;
  color: #ccc;
  display: block;
}
