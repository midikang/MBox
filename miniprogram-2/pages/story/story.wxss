/* story.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF3E0 0%, #FFFFFF 100%);
  padding-bottom: 120rpx;
}

.story-header {
  padding: 30rpx;
  background: #fff;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.story-image {
  width: 100%;
  height: 500rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.story-meta {
  padding: 30rpx 10rpx 0;
}

.story-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.story-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.tag {
  font-size: 24rpx;
  color: #FF6F00;
  background: #FFF3E0;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.story-time {
  font-size: 26rpx;
  color: #999;
  display: block;
}

.story-content {
  margin: 40rpx 30rpx;
  padding: 40rpx;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.content-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.content-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #666;
  display: block;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.action-btn {
  width: calc(50% - 10rpx);
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 30rpx;
  border: 2rpx solid #FF9800;
  background: #fff;
  color: #FF9800;
  padding: 0;
}

.action-btn.primary {
  background: #FF9800;
  color: #fff;
}

.action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 32rpx;
}
