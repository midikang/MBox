/* pages/index/index.wxss */
.container {
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: white;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.upload-btn {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: white;
  margin-bottom: 20rpx;
}

.count {
  color: #666;
  font-size: 28rpx;
}

.delete-btn {
  padding: 15rpx 30rpx;
  font-size: 26rpx;
}

.delete-btn[disabled] {
  opacity: 0.5;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

.image-item {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.image-item.selected {
  border: 4rpx solid #1890ff;
}

.checkbox {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  z-index: 10;
  padding: 10rpx;
}

.checkbox-inner {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.checkbox-inner.checked {
  background: #1890ff;
  border-color: #1890ff;
  color: white;
}

.image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.image-info {
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.filename {
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.date {
  font-size: 20rpx;
  color: #999;
}

.actions {
  padding: 0 15rpx 15rpx;
}

.action-btn {
  width: 100%;
  padding: 15rpx;
  background: #f0f0f0;
  color: #333;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  gap: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

.empty-hint {
  font-size: 26rpx;
  color: #ccc;
}
