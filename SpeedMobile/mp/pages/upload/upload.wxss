/* pages/upload/upload.wxss */
.container {
  min-height: 100vh;
}

.header {
  padding: 30rpx;
  background: white;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.select-area {
  padding: 40rpx 30rpx;
  background: white;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  align-items: center;
}

.select-btn {
  width: 80%;
  padding: 25rpx;
  font-size: 30rpx;
}

.hint {
  font-size: 24rpx;
  color: #999;
}

.preview-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  padding: 20rpx;
  background: white;
  margin-bottom: 20rpx;
}

.preview-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  display: block;
}

.remove-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  line-height: 1;
}

.actions {
  padding: 20rpx 30rpx;
  background: white;
  margin-bottom: 20rpx;
}

.upload-btn {
  width: 100%;
  padding: 25rpx;
  font-size: 32rpx;
}

.tips {
  padding: 30rpx;
  background: white;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
